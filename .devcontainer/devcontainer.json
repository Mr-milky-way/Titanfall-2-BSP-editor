{
    "name": "Qt 6 GUI Development",
    "features": {
        // Adds a lightweight desktop (XFCE) and VNC/noVNC server
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "version": "latest",
            "password": "vscode"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "trolltech.qt-official"
            ]
        }
    },
    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "noVNC Desktop",
            "onAutoForward": "openBrowser"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential qt6-base-dev qt6-wayland libqt6widgets6"
}